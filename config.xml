<?xml version='1.0' encoding='utf-8'?>
  <widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" id = "com.ybi.debug.app" version = "0.1">
  <name>YBI debug</name>
  <description>YBI debug app</description>
  <author email="a.gladilov@yandex.ru" href="http://sapiens.media">Alex Gl</author>
  
  <access origin="http://y-b-i.com" />
  <allow-navigation href="http://y-b-i.com/*" />
  <allow-intent href="http://y-b-i.com/*" />
  
  <preference name="phonegap-version" value="cli-6.1.0" />
  <gap:platform name="ios" />
  <gap:platform name="android" />
  
  
  <!-- PLUGINS: -->
  <plugin name="cordova-plugin-device" source="pgb" />
  <plugin name="cordova-plugin-dialogs" source="pgb" />
  <plugin name="cordova-plugin-network-information" source="pgb" />
  <plugin name="cordova-plugin-whitelist" source="npm" />
  <plugin name="cordova-plugin-wkwebview-engine" source="npm" />
  
  <!-- PLUGINS TODO: 
                    <plugin name="cordova-plugin-actionsheet" source="npm" /> - for Share button
                    <plugin name="cordova-plugin-x-socialsharing" source="npm" /> - for Share button
  -->
  
  <!--<plugin name="cordova-plugin-statusbar" source="npm" />
  <plugin name="cordova-plugin-splashscreen" source="npm" />-->
  
  
  <!-- PREFERENCES: -->
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait" />
  <preference name="fullscreen" value="false" />
  <preference name="target-device" value="universal" />
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="ios-statusbarstyle" value="black-opaque" />
  <preference name="android-installLocation" value="auto" />
  
  <!-- iOS only preferences -->
  <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
  
  <!--<preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="FadeSplashScreenDuration" value="300"/>
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="true" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <key>UIStatusBarHidden</key>
  <true/>
  <key>UIViewControllerBasedStatusBarAppearance</key>
  <false/>-->
  
  
  <!-- ICONS AND SPLASH: -->
  <icon src="icon.png" />
  
  <platform name="ios">
    <icon src="res/icon/ios/icon-57.png" height="57" width="57" />
    <icon src="res/icon/ios/icon-72.png" height="72" width="72" />
    <icon src="res/icon/ios/icon-57-2x.png" height="114" width="114" />
    <icon src="res/icon/ios/icon-72-2x.png" height="144" width="144" />
    
    <splash src="res/screen/ios/screen-ipad.png" width="768" height="1024" />
    <splash src="res/screen/ios/screen-ipad@2x.png" width="1536" height="2048" />
    <splash src="res/screen/ios/splash-iphone4.png" width="320" height="480" />
    <splash src="res/screen/ios/splash-iphone4@2x.png" width="640" height="960" />
    <splash src="res/screen/ios/screen-iphone5@2x.png" width="640" height="1136" />
    <splash src="res/screen/ios/screen-iphone6@2x.png" width="750" height="1334" />
    <splash src="res/screen/ios/screen-iphone6@3x.png" width="1242" height="2208" />
  </platform>

  <platform name="android">
    <icon src="res/icon/android/ldpi.png" qualifier="ldpi" />
    <icon src="res/icon/android/mdpi.png" qualifier="mdpi" />
    <icon src="res/icon/android/hdpi.png" qualifier="hdpi" />
    <icon src="res/icon/android/xhdpi.png" qualifier="xhdpi" />
    
    <splash src="res/screen/android/splash-port-hdpi.png" density="hdpi" />
    <splash src="res/screen/android/splash-port-ldpi.png" density="ldpi" />
    <splash src="res/screen/android/splash-port-mdpi.png" density="mdpi" />
    <splash src="res/screen/android/splash-port-xhdpi.png" density="xhdpi" />
  </platform>
  
</widget>
